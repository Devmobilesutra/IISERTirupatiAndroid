<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_background"
    android:theme="@style/AppTheme.Dark">

    <ProgressBar
        android:id="@+id/progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/center_img_width"
                    android:layout_height="@dimen/center_img_width"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="@dimen/center_img_bottom_margin"
                    android:layout_marginTop="@dimen/center_img_top_margin"
                    android:scaleType="fitCenter"
                    android:src="@drawable/app_center_img" />

                <EditText
                    android:id="@+id/edtxt_username"
                    style="@style/Login_edittext"
                    android:hint="@string/edtxt_hint_username"
                    android:editable="true"/>

                <EditText
                    android:id="@+id/edtxt_password"
                    style="@style/Login_edittext"
                    android:hint="@string/edtxt_hint_password"
                    android:inputType="textPassword"
                    android:editable="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/chkbx_remembr_me"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/txt_marginLeft"
                        android:layout_marginLeft="@dimen/edittxt_marginLeft"
                        android:text="@string/txt_remember_me"
                        android:textColor="@color/edittext_textcolor"
                        android:textSize="@dimen/edittxt_textsize" />
                    <!--
                            <TextView
                                android:id="@+id/txt_remember_me"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="@dimen/activity_vertical_margin"
                                android:text="@string/txt_remember_me"
                                android:textColor="@color/edittext_textcolor"
                                android:textSize="@dimen/edittxt_textsize" />-->

                </LinearLayout>

                <Button
                    android:id="@+id/btn_login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/edittxt_marginLeft"
                    android:layout_marginRight="@dimen/edittxt_marginLeft"
                    android:background="@color/edittext_txtcolor_white"
                    android:gravity="center"
                    android:text="Login"
                    android:textColor="@color/edittext_textcolor" />

                <!-- <RelativeLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:layout_marginBottom="@dimen/center_img_bottom_margin"
                     android:layout_marginLeft="@dimen/edittxt_marginLeft"
                     android:layout_marginRight="@dimen/edittxt_marginLeft"
                     android:layout_marginTop="@dimen/txt_marginLeft">

                     <TextView
                         android:id="@+id/txt_forgot_password"
                         style="@style/txt_login"
                         android:layout_toLeftOf="@+id/txt_slash"
                         android:text="@string/txt_forgot_password" />

                     <TextView
                         android:id="@+id/txt_slash"
                         style="@style/txt_login"
                         android:layout_marginLeft="@dimen/txt_marginLeft"
                         android:layout_toLeftOf="@+id/txt_new_login"
                         android:text="@string/txt_slash" />

                     <TextView
                         android:id="@+id/txt_new_login"
                         style="@style/txt_login"
                         android:layout_alignParentRight="true"
                         android:layout_marginLeft="@dimen/txt_marginLeft"
                         android:text="@string/txt_new_login" />

                 </RelativeLayout>-->
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>