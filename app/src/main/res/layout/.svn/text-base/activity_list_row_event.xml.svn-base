<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/lnrlayout_event_cardview"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_first_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/txt_marginLeft"
        android:layout_marginRight="@dimen/txt_marginLeft"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="80dp"
                android:orientation="vertical"
                android:padding="@dimen/date_event_marging"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true">

                <TextView
                    android:id="@+id/txt_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apr"
                    android:textColor="@color/tab_onclick_color"
                    android:textSize="@dimen/text_body_5" />

                <TextView
                    android:id="@+id/txt_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="04"
                    android:textColor="@color/txt_day_color"
                    android:textSize="@dimen/text_body_month" />

            </LinearLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_alarm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/img_event_alarm"
                app:fabSize="mini"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:id="@+id/ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ll"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_order_detail_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@color/edittext_background">

                    <TextView
                        android:id="@+id/txt_event_header"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="DTOEvent header"
                        android:textSize="@dimen/text_body1"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#687982"/>

                    <TextView
                        android:id="@+id/txt_event_organiser"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_event_header"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:text=""
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="#687982" />

                    <TextView
                        android:id="@+id/txt_event_venue"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_event_organiser"
                        android:paddingBottom="@dimen/event_margin"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#687982" />
                    <TextView
                        android:id="@+id/txt_event_pdf_link"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_event_organiser"
                        android:paddingBottom="@dimen/event_margin"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:text=""
                        android:singleLine="true"
                        android:ellipsize="end"
                        android:textColor="#687982"
                        android:visibility="gone"
                        />

                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray" />
</LinearLayout>