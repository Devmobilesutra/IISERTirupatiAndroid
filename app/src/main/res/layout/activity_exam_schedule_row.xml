<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/lnrlayout_event_cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Please select your courses for exam_schedule"/>-->

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_first_1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/event_margin"
        android:layout_marginLeft="@dimen/txt_marginLeft"
        android:layout_marginRight="@dimen/txt_marginLeft"
        android:layout_marginTop="@dimen/event_margin"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:elevation="2dp"
        android:foreground="?android:attr/selectableItemBackground">

        <!--<TextView-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:text="Please select your courses for exam_schedule"/>-->


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <LinearLayout
                android:id="@+id/ll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/date_event_marging"
                android:layout_alignBottom="@+id/ll_item"
                android:weightSum="1">

                <TextView
                    android:id="@+id/txt_exam_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Apr"
                    android:textColor="@color/tab_onclick_color"
                    android:textSize="@dimen/text_body_5"
                    android:layout_weight="1.15" />

                <TextView
                    android:id="@+id/txt_exam_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="04"
                    android:textColor="@color/txt_day_color"
                    android:textSize="@dimen/text_body_month" />
            </LinearLayout>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fab_alarm1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:src="@drawable/img_event_alarm"
                app:fabSize="mini"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:id="@+id/ll_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ll"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_order_detail_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/edittext_background">

                    <TextView
                        android:id="@+id/txt_exam_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:text="SEM-II"
                        android:textColor="#687982"
                        android:textSize="@dimen/text_body1"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/txt_sub_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_exam_title"
                        android:ellipsize="end"
                        android:maxLines="2"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:text="header value"
                        android:textColor="@color/txt_day_color" />

                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/rl_order_detail_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/edittext_background"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:id="@+id/txt_exam_time"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingBottom="@dimen/event_margin"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:singleLine="true"
                        android:text="10.30-12.30 pm"
                        android:textColor="#687982" />

                    <TextView
                        android:id="@+id/txt_venue"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="end"
                        android:paddingBottom="@dimen/event_margin"
                        android:paddingLeft="@dimen/event_margin"
                        android:paddingTop="@dimen/event_margin"
                        android:singleLine="true"
                        android:text="Aryabhatt hall"
                        android:textColor="#687982" />

                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@android:color/darker_gray" />-->
</LinearLayout>