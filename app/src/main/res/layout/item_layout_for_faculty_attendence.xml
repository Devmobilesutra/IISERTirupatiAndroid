<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginRight="@dimen/txt_marginLeft"
            android:layout_marginTop="@dimen/event_margin"
            android:layout_marginBottom="@dimen/event_margin"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:elevation="2dp"
            android:foreground="?android:attr/selectableItemBackground">

            <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/txt_deal_medium_left_marging"
                        android:orientation="horizontal"
                        android:layout_gravity="center_vertical"
                        android:weightSum="2">
                        <TextView
                            android:id="@+id/txt_rollNumber"
                            android:layout_width="0dp"
                            android:layout_weight="0.7"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginBottom="@dimen/txt_margin_top"
                            android:ellipsize="end"
                            android:paddingBottom="@dimen/txt_line1_padding_top"
                            android:paddingTop="@dimen/txt_line1_padding_top"
                            android:singleLine="true"
                            android:padding="5dp"
                            android:text="4 APR 2016"
                            android:textColor="#687982"
                            android:textSize="@dimen/text_body2"
                            android:textStyle="bold" />

                <ProgressBar
                    android:id="@+id/progressbar_attendence"
                    android:layout_marginTop="10dp"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:indeterminate="false"
                    android:max="100"
                    android:maxHeight="10dip"
                    android:minHeight="10dip"
                    android:progress="0"
                    android:secondaryProgress="100"
                    android:progressDrawable="@drawable/progress_limit"/>
                <TextView
                    android:id="@+id/txt_percentage"
                    android:layout_width="0dp"
                    android:layout_weight="0.3"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginBottom="@dimen/txt_margin_top"
                    android:layout_marginLeft="5dp"
                    android:ellipsize="end"
                    android:paddingBottom="@dimen/txt_line1_padding_top"
                    android:paddingTop="@dimen/txt_line1_padding_top"
                    android:singleLine="true"
                    android:padding="5dp"
                    android:textColor="#687982"
                    android:textSize="@dimen/text_body2"
                    android:textStyle="bold" />
                    </LinearLayout>




        </android.support.v7.widget.CardView>
    </LinearLayout>

    <!-- <View
         android:layout_width="match_parent"
         android:layout_height="1dp"
         android:background="@android:color/darker_gray" />-->
</LinearLayout>
